# Production Environment Variables for VedZeb Server (Vercel)
# Set these in Vercel Dashboard > Project Settings > Environment Variables

# Database (Neon.tech)
DATABASE_URL="postgresql://username:password@ep-xxx.region.neon.tech/vedzeb?sslmode=require"

# JWT - Use a strong, unique secret (minimum 32 characters)
JWT_SECRET="your-production-jwt-secret-at-least-32-characters-long"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_DAYS="7"

# SMS Provider (Twilio) - For real SMS verification
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="+1234567890"

# For production - set to "false" to send real SMS
SMS_MOCK_MODE="true"

# Cloudinary - For image uploads
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"

# Server
NODE_ENV="production"

# Frontend URL (for CORS) - Update after deploying frontend
CLIENT_URL="https://vedzeb.vercel.app"
